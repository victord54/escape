<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="fr.ul.acl.escape.ui.views.HomeController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label fx:id="gameTitle" text="Game" textAlignment="CENTER">
        <font>
            <Font name="System Bold" size="42.0"/>
        </font>
    </Label>
    <CheckBox fx:id="fullScreenCheckBox" mnemonicParsing="false" text="FullScreen" onAction="#onFullScreenToggle"/>
    <Button onAction="#onHelloButtonClick" text="Start!"/>
</VBox>
